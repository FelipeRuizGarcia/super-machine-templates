{
    "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
    "files": {
        "maxSize": 9048576
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "tab",
        "indentWidth": 2,
        "lineWidth": 80,
        "lineEnding": "lf",
        "ignore": []
    }
}
